  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8, text >=1.1 && <1.2, containers >=0.5 && <0.6, HUnit >=1.2 && <1.3
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite spec
  hs-source-dirs:   test
  main-is:          Spec.hs
  type:             exitcode-stdio-1.0
  build-depends:    base >=4.7 && <4.8
                    , text >=1.1 && <1.2
                    , containers >=0.5 && <0.6
                    , Cabal >= 1.18.0
                    , aoc >= 0.1.0.0
                    , hspec >= 1.3
  default-language: Haskell2010

