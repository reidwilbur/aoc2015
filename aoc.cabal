name:                aoc
version:             0.1.0.0
synopsis:            Solutions to Advent of Code 2015
-- description:         
-- license:             
-- license-file:        LICENSE
author:              Reid Wilbur
maintainer:          reid.wilbur@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  exposed-modules:     Day1, Day2, Day3
